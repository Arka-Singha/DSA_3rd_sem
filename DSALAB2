char calculation;
printf("Enter an calculator(+,-,*,/):");
scanf(" %c",&calculation);

switch (calculation)
{
case '+':
printf("%lf+%lf=%lf",a,b,a+b);
break;

case '-':
printf("%lf-%lf=%lf",a,b,a-b);
break;

case '*':
printf("%lf*%lf=%lf",a,b,a*b);
break;

case '/':
printf("%lf/%lf=%lf",a,b,a/b);
break;
default:
printf(" Error");
}
returnÂ 0;
}